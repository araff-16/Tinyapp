<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <div>
      <% if (user) { %>
        <form class="form-inline center justify-content-center" action="/logout" method="POST">
          <div  class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <span style="margin: 1em">Logged In As: <%= user.email %></span>
            <button type="submit" class="btn btn-outline-dark">Logout</button>
          </div>
        </form>
      <% } else { %>
      
      <div class = "form-inline form-group mb-2">
        <form class="form-inline center justify-content-center " action="/login" method="GET">
            
          <!--
          <input class="form-control" type="text" name="username" placeholder="Username" style="width: 300px; margin: 1em"> 
          -->
          <button type="submit" class="btn btn-outline-dark">Login</button>
            
        </form>  
      
      
        <form class="form-inline center justify-content-center" action="/register" method="GET">
          
          <!--
          <input class="form-control" type="text" name="username" placeholder="Username" style="width: 300px; margin: 1em"> -->
            
          <button type="submit" class="btn btn-outline-dark" style="margin:10px">Register</button>
          
        </form>
      </div>
      <% } %>
    </div>
  </nav>
</header>